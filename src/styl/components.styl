/* boxes > */
.box {
	min-height:100%;
	position:relative;
	z-index:3;

	background:#fff;
	border:1px solid #e7e7e8;

	border-radius:12px 12px 0 0;

	&__head {
		display:block;
		position:relative;
		background:url('../img/bg/decor/decor-box-head.png') 100% 0 no-repeat;
		padding:5px 90px 5px 27px;
		margin:0;
		line-height:42px;
		min-height:42px;
		border-radius:12px 12px 0 0;
		border-bottom:#c2c2c4 dashed 1px;

		&:after {
			content:"";
			position:absolute;
			left:0;
			bottom:-1px;
			display:block;
			width:100%;
			height:1px;
			box-shadow:0 2px 3px rgba(0,0,0,0.3);
			font:$fontNull;
		}
	}
	&__title {
		display:inline-block;
		vertical-align:middle;
		color:#34529d;
		font:21px/1.1111 $fontTahoma;
		padding:0;
		margin:0;
	}
	&__ico {
		display:block;
		position:absolute;
		top:50%;
		margin:-15px 0 0;
		padding:0;
		right:15px;

		&_content_menu {
			width:24px;
			height:27px;
			background:url('../img/bg/ico-menu.png') no-repeat;
		}
		&_content_services {
			width:30px;
			height:31px;
			background:url('../img/bg/ico-services.png') no-repeat;
		}
		&_content_support {
			width:31px;
			height:31px;
			background:url('../img/bg/ico-support.png') no-repeat;
		}
		&_content_mail {
			width:31px;
			height:31px;
			background:url('../img/bg/ico-mail.png') no-repeat;
		}
	}

	&__body {
		overflow:hidden;
		padding:12px 20px 12px 27px;
		z-index:2;

		&:after {
			content:'';
			position:absolute;
			display:block;
			bottom:14px;
			width:100%;
			height:39px;
			margin-left:-47px;
			z-index:-1;
			background-position:100% 0;
			background-repeat:no-repeat;
		}
	}

	&:after {
		display:block;
		content:"";
		position:absolute;
		width:100%;
		bottom:-1px;
		height:3px;

		background: #9c9c9c;
		background: unquote('url(data:image/svg+xml;base64,)');
		background: linear-gradient(to right,  #9c9c9c 0%,#ffffff 48%,#949494 100%);

		ie-horizontal-gradient(#9c9c9c, #949494) if ie;
		background:#9c9c9c url('../img/bg/gradients/box-line.png') 100% 0 repeat-y if ie8;
	}
	&:before,
	>.b-before {
		content:"";
		position:absolute;
		bottom:0;
		left:10px;
		right:10px;
		height:160px;
		z-index:-2;
		clip:rect(160px, 1000px, 1000px, 0);
		box-shadow:0 0 15px rgba(0,0,0,0.6);
		border-radius:100px / 10px;
	}

	&_line_blue {

		&:after {
			background: #255acb;
			background: unquote('url(data:image/svg+xml;base64,)');
			background: linear-gradient(to right,  #255acb 0%,#2658ca 1%,#00bfff 58%,#1c73d8 100%);

			ie-horizontal-gradient(#255acb, #1c73d8) if ie;
			background:#255acb url('../img/bg/gradients/box-primary-line.png') 100% 0 repeat-y if ie8;
		}
	}

	&_number_01 {
		.box__body {
			&:after {
				background-image:url('../img/bg/decor/decor_pos_01.png');
			}
		}
	}
	&_number_02 {
		.box__body {
			&:after {
				background-image:url('../img/bg/decor/decor_pos_02.png');
			}
		}
	}
	&_number_03 {
		.box__body {
			&:after {
				background-image:url('../img/bg/decor/decor_pos_03.png');
			}
		}
	}

	&_type_primary {
		color:#fff;
		border:0;
		padding:1px 0 0;
		background:url('../img/bg/gradients/box-primary-bg.png');

		.box__head,
		.box__body {
			padding-left:28px;
		}
		.box__head {
			background-image:url('../img/bg/decor/decor-box-primary-head.png');

			&:after {
				box-shadow:0 -2px 3px rgba(0,255,255,0.3);
			}
		}
		.box__body {
			padding:0 17px;

			&:before,
			>.b-before {
				content:'';
				display:block;
				position:absolute;
				bottom:0;
				width:194px;
				height:97px;
				margin:0 0 0 -24px;
				background:url('../img/bg/decor/decor-lightwhite_194x97.png') no-repeat;
				z-index:-1;
			}

			ie-before() if ie;
		}
		.box__title {
			color:#fff;
			text-shadow:1px 1px 0 #23578e;
		}
	}
	&_type_submenu {
		.box__body {
			padding:0;
		}
	}
	&_type_content {
		margin-bottom:13px;
		min-height:0;
		background:#fff url('../img/bg/decor/decor-blue_393x189.png') 100% 100% no-repeat;

		.box__body {
			min-height:165px;
		}
	}

    &_content_order {
	    .box__title {
		    color:#565c6a;
	    }
    }

	&_content-type_side {
		margin-bottom:8px;
		min-height:0;
	}

    &_content_map {
	    .box__body {
		    padding:12px 14px;
	    }
    }

    ie-beforeAndAfter() if ie;
}
