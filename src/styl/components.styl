/* contacts < */

/* main menu > */
.menu_type_main {
	clearList();
	clear:right;
	float:right;
	display:inline;
	padding:0 10px 0 0;
	margin:0 0 0 30px;
	font:$fontNull;
	white-space:nowrap;
	position:relative;

	background:#4799e5;
	background:url('../img/bg/gradients/menu-bg.png') repeat-x;

	&:after,
	>.b-after {
		position:absolute;
		content:'';
		display:block;
		width:29px;
		height:46px;
		top:50%;
		left:-29px;
		margin:-23px 0 0 0;
		background:url('../img/bg/gradients/menu-arrow.png') no-repeat;
	}

	>.menu__item {
		position:relative;
		color:#fff;
		font:12px/1 $fontTahoma;
		text-transform:uppercase;
		display:inline-block;
		vertical-align:middle;
		margin:0;
		padding:0;

		&:first-child {
			&:before,
			>.b-before {
				display:none;
			}
		}

		&:before,
		>.b-before {
			content:'';
			position:absolute;
			top:50%;
			left:0;
			width:1px;
			height:15px;
			margin:-7px 0 0;
			background:#083a7b;
			background:rgba(8,58,124,.33);
			font:$fontNull;
		}

		ie-before() if ie;
	}
	.menu__text {
		display:block;
		margin:0;
		padding:0 10px;
		vertical-align:middle;
		color:#ffffff;
		text-decoration:none;
		white-space:normal;
		font:500 12px/1 $fontDaxline;
		line-height:46px;
		min-height:46px;

		text-shadow:1px 1px 2px #2360a4;
		transition: background-color .2s ease-out;

		&:hover {
			background:#fff if !ie;
			background:rgba(255,255,255,.15);
			background:url('../img/bg/gradients/menu-hover-bg.png') if ie8;
			c#000 if ie;
		}
	}
	.menu__text-in {
		display:inline-block;
		vertical-align:middle;
		line-height:1.25;
	}

	.menu__item_state_active .menu__text {
		background:#fff if !ie;
		background:rgba(255,255,255,.15);
		background:url('../img/bg/gradients/menu-hover-bg.png') if ie8;
		c#000 if ie;
		cursor:auto;
	}

    ie-after() if ie;
}
/* main menu < */

/* footer menu > */
.menu_type_footer {
	clearList();
	display:table;
	table-layout:fixed;
	border-spacing:0;
	width:100%;
	padding:0;
	margin:0;
	font:$fontNull;
	white-space:nowrap;
	position:relative;
	text-align:center;

	>.menu__item {
		color:#fff;
		font:12px/1 $fontTahoma;
		display:table-cell;
		display:inline-block if ie;
		vertical-align:middle;
		margin:0;
		padding:0;
		text-align:center;
	}
	.menu__item_state_active .menu__text {
		text-decoration:none;
		cursor:auto;
		background:#fff if !ie;
		background:rgba(255,255,255,.15);
		background:url('../img/bg/gradients/menu-hover-bg.png') if ie8;
		c#000 if ie;
	}
	.menu__text {
		display:block;
		margin:0;
		padding:0 10px;
		vertical-align:middle;
		color:#ffffff;
		white-space:normal;
		font:12px/38px $fontTahoma;

		text-shadow:1px 1px 2px #2360a4;
		transition: background-color .2s ease-out;

		&:hover {
			background:#fff if !ie;
			background:rgba(255,255,255,.15);
			background:url('../img/bg/gradients/menu-hover-bg.png') if ie8;
			c#000 if ie;
		}
	}
	.menu__text-in {
		display:inline-block;
		vertical-align:middle;
		line-height:1.25;
	}
}
/* footer menu < */

/* aside menu > */
.menu_type_aside {
	clearList();
	margin:12px 0;

	>.menu__item {
		color:#fff;
		position:relative;
		margin:0;
		padding:16px 10px 16px 47px;
		list-style-image:none;
		border-top:1px dashed #64a1da;

		&:first-child {
			border-top:0;
			padding-top:0;
		}

		&:before,
		>.b-before {
			content:'';
			display:block;
			position:absolute;
			left:10px;
			margin:0;
			padding:0;
			width:24px;
			height:27px;
			background:url('../img/bg/ico-submenu-item.png') no-repeat;
		}

		zoom:1 if ie;
		ie-before() if ie;
	}
	.menu__text {
		color:#fff;
		margin:0;
		padding:2px 0;
		font:15px/1.5 $fontTahoma;
	}
	.menu__item_state_active .menu__text {
		color:#565c6a;
		cursor:auto;
		text-decoration:none;
	}
}
/* aside menu < */

/* submenu > */
.menu_type_submenu {
	clearList();
	padding:0;
	margin:10px 0;

	>.menu__item {
		color:#073a7b;
		font:13px/1.5 $fontTahoma;
		border-top:1px dashed #d8d8d9;
		padding:9px 10px 10px 62px;
		margin:0;
		position:relative;
		zoom:1 if ie;

		&:first-child {
			border-top:0;

			&:after,
			>.b-after {
				display:none;
			}
		}

		&:before,
		>.b-before {
			content:'';
			display:block;
			position:absolute;
			top:auto;
			left:auto;
			width:7px;
			height:7px;
			margin:6px 0 0 -23px;
			background:url('../img/bg/ico-list-item.png') no-repeat;
		}

		&:after,
		>.b-after {
			content:"";
			position:absolute;
			left:0;
			top:-1px;
			display:block;
			width:100%;
			height:1px;
			box-shadow:0 2px 3px rgba(0,0,0,0.3);
			font:$fontNull;
		}

		ie-beforeAndAfter() if ie;
	}
	.menu__text {
		color:#073a7b;
	}
}
/* submenu < */

